generator client {
  provider        = "prisma-client"
  output          = "../lib/generated/prisma"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["spark"]
}

model SparkUser {
  id              String    @id @default(cuid())
  clerkId         String    @unique // Connects to your Clerk user
  name            String?
  email           String    @unique
  emailVerified   DateTime?
  passwordHash    String?
  image           String?
  profileComplete Boolean   @default(false)
  bio             String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  member          Member?

  @@map("SparkUser")
  @@schema("spark")
}

model Member {
  id          String    @id @default(cuid())
  clerkId     String    @unique
  lastActive  DateTime  @default(now())
  name        String
  gender      String
  dateOfBirth DateTime
  created     DateTime  @default(now())
  updated     DateTime  @default(now())
  description String
  city        String
  country     String
  image       String?
  user        SparkUser @relation(fields: [clerkId], references: [clerkId], onDelete: Cascade)
  photos      Photo[]

  // New "Vibe" Fields
  interests  String // Store as "Hiking,Coding,Sushi"
  lookingFor String? // "Long-term", "Casual", etc.

  // Life Details
  height     Int? // In cm
  ethnicity  String?
  religion   String?
  education  String?
  profession String?

  // Prompts (The "Conversation Starters")
  promptQuestion String? // "My most embarrassing moment..."
  promptAnswer   String?
  sourceLikes    Like[]  @relation("source")
  targetLikes    Like[]  @relation("target")

  @@schema("spark")
}

model Photo {
  id       String  @id @default(cuid())
  url      String
  publicId String?

  memberId String
  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@schema("spark")
}

model Like {
  sourceUserId String
  sourceMember Member @relation("source", fields: [sourceUserId], references: [clerkId], onDelete: Cascade)
  targetUserId String
  tagetMember  Member @relation("target", fields: [targetUserId], references: [clerkId], onDelete: Cascade)

  @@id([sourceUserId, targetUserId])
  @@schema("spark")
}
