generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model SparkUser {
  id            String    @id @default(cuid())
  clerkId       String    @unique // Connects to your Clerk user
  name          String?
  email         String    @unique
  image         String?
  bio           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}